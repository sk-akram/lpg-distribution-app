<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">


    <RelativeLayout
        android:id="@+id/order_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <!-- Text View to display Course Name -->
        <TextView
            android:id="@+id/his_order_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Order Id: 2397193"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/his_consumer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/his_order_id"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:drawablePadding="2dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="Consumer No: 2241342"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/his_dist_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/his_consumer"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:drawablePadding="2dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="Distributor ID: 498"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/his_dist_loc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/his_dist_no"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:drawablePadding="2dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="Distribution Loc: Dankuni"
            android:textStyle="bold"/>



        <TextView
            android:id="@+id/his_order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/his_dist_loc"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="37dp"
            android:layout_marginBottom="18dp"
            android:drawablePadding="2dp"
            android:text="Ordered: 09:30 AM"
            android:textColor="@color/green"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/his_delivery_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/his_order_time"
            android:layout_marginStart="10dp"

            android:layout_marginEnd="37dp"
            android:layout_marginBottom="18dp"
            android:drawablePadding="2dp"
            android:text="Delivered: 00:00 AM"
            android:textColor="@color/red"
            android:textSize="16sp"
            android:textStyle="bold"  />


    </RelativeLayout>
</androidx.cardview.widget.CardView>